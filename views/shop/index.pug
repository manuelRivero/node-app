extends ../layout.pug

block styles
    style.
        .card-image{
            height:100%;
            background:
            url('https://image.shutterstock.com/image-vector/no-image-available-sign-internet-260nw-261719003.jpg') center no-repeat;
            
        }

block content
    main
        .row
            if productData.length > 0
                each product in productData
                    .col.s12.m4
                        .card
                            .card-image
                                img(src=product.imgUrl)
                                span.card-title #{product.title}
                            .card-content
                                p #{product.description}
                            .card-action
                                form(method='POST', action='/cart-add-product' )
                                    input(type="hidden", name="id" value=product.id)
                                    button.btn.waves-effect.waves-light(type="submit") Add to car!

            else 
                h1 No products!
    