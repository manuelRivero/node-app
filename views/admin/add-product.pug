extends ../layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    form(action= editing ? '/edit-product':'/add-product' method='POST')
      .form-control
        label(for='title') Title
        input#title(type='text' name='title' value= editing? product.title : '')
        
        label(for='price') Price
        input#price(type='number' name='price' value= editing? product.price : '')
        
        label(for='imgUrl') Image
        input#imgUrl(type='text' name='imgUrl' value= editing? product.imgUrl : '')
        
        label(for='description') description
        textarea#description(name="description", cols="30", rows="5" value= editing? product.description : '')

        if(editing)
            input(type="hidden", name="id" value=product.id)

        button(type='submit' class="waves-effect waves-light btn") #{ editing ? 'Update product' : 'Add Product'}

